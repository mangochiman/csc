<script>
  function cancelAction(){
    window.location = "/admin/description"
  }
</script>

<div class="row">
  <div class="col-lg-12">
    <div class="box">
      <header>
        <div class="icons"><i class="icon-th-large"></i></div>
        <h5>Company's Description</h5>
      </header>

      <div id="cleditorDiv" class="body collapse in">
        <div class="btn-toolbar"></div>
        <form action="/admin/create_company_description" method="POST">
          <textarea id="cleditor" class="form-control" name="content"><%= @company_description.content rescue '' %></textarea>

          <div class="form-actions no-margin-bottom" id="cleditorForm">
            <br />
            <input type="submit" value="Save" class="btn btn-primary" />
            <input type="reset" value="Cancel" onclick="cancelAction()" class="btn btn-danger" />
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

