<%= stylesheet_link_tag("metallic") %>
<style>
  form input[type=text] {

  }
  form input, form textarea {
    border: 1px solid;
  }
</style>

<br />
<span class="clearfix"></span>
<section  class="content" style="text-align: center; height:  620px;" id="three_parags">
  <img src="/uploads/<%= "#{@selected_car.car_id}-front.png" %>" class="top" alt="photo"/><br />
  <b>Note: </b><i style="font-size: 10pt; font-weight: bolder; color: red;">This process will be verified manually by calling using the phone number <br />
    that you will fill below within 24 hrs</i><br /><br />
  <form action="/pages/process_edit_bookings" method="POST">
    <table style="width: 90vh; left: 30%; position: relative;">
      <tr>
        <td>E-mail</td>
        <td><input type="email" name="email" value="<%= @booking.email %>" required></input></td>
      </tr>
      <tr>
        <td>Secret Code</td>
        <td><input type="text" name="secret_code" value="<%= @booking.secret_code %>" required></input></td>
      </tr>
      <tr>
        <td>Phone #</td>
        <td><input type="phone" name="phone" value="<%= @booking.phone %>" required></input></td>
      </tr>
      <tr>
        <td>Start Date</td>
        <td><input type="text" name="start_date" value="<%= @booking.start_date %>" class="date-picker" required></input></td>
      </tr>
      <tr>
        <td>End Date</td>
        <td><input type="text" name="end_date" value="<%= @booking.end_date %>" class="date-picker" required></input></td>
      </tr>
      <input type="hidden" value="<%= @selected_car.car_id %>" name="car_id"></input>
      <input type="hidden" value="<%= @booking_id %>" name="booking_id"></input>
      <tr>
        <td colspan="2">
          <input type="submit" value="Save Changes" ></input>
        </td>
      </tr>
    </table>
  </form>
</section><br />
<section>


</section>
<span class="clearfix"></span>

<hr />

